      ]
    },
    {
      "name": "Start Tracking",
      "short_name": "Track",
      "description": "Start journey tracking",
      "url": "./index.html?tracking=true",
      "icons": [
        {
          "src": "./icons/tracking-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
