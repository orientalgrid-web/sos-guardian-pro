{
  "name": "SafeRoute Nigeria - Emergency Guardian",
  "short_name": "SafeRoute",
  "description": "Your personal safety companion for every journey in Nigeria. Emergency alerts, live GPS tracking, and shake detection to keep you safe.",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone"],
  "orientation": "portrait-primary",
  "background_color": "#0A192F",
  "theme_color": "#0A192F",
  "id": "/?source=pwa",
  "lang": "en",
  "dir": "ltr",
  "categories": ["navigation", "safety", "security", "utilities"],
  "shortcuts": [
    {
      "name": "Emergency Alert",
      "short_name": "Emergency",
      "description": "Send immediate emergency alert to contacts",
      "url": "/?emergency=true",
      "icons": [
        {
          "src": "/icons/emergency-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Start Tracking",
      "short_name": "Track",
      "description": "Begin live GPS journey tracking",
      "url": "/?tracking=true",
      "icons": [
        {
          "src": "/icons/tracking-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Check Contacts",
      "short_name": "Contacts",
      "description": "View and manage emergency contacts",
      "url": "/?contacts=true",
      "icons": [
        {
          "src": "/icons/contacts-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/maskable-icon.png",
      "sizes": "196x196",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "SafeRoute Dashboard with emergency features"
    },
    {
      "src": "/screenshots/narrow.png",
      "sizes": "720x1280",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "SafeRoute Mobile Interface for on-the-go safety"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 360
  },
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+saferoute",
      "url": "/?emergency=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "text/vcard": [".vcf"]
      },
      "icons": [
        {
          "src": "/icons/contacts-96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false
}
