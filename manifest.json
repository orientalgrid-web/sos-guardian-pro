    },
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/screenshot1.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Emergency Contacts Screen"
    },
    {
      "src": "screenshots/screenshot2.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Live Tracking Screen"
    }
  ],
  "shortcuts": [
    {
      "name": "New Emergency",
      "short_name": "Emergency",
      "description": "Activate emergency mode",
      "url": "/?emergency=true",
      "icons": [
        {
          "src": "icons/emergency-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Start Tracking",
      "short_name": "Track",
      "description": "Start journey tracking",
      "url": "/?tracking=true",
      "icons": [
        {
          "src": "icons/tracking-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+saferoute",
      "url": "/?emergency=%s"
    }
  ],
  "permissions": [
    "geolocation",
    "notifications",
    "background-sync",
    "periodic-background-sync"
  ],
  "id": "/?source=pwa",
  "scope": "/",
  "prefer_related_applications": false,
  "related_applications": []
}
