      "form_factor": "narrow"
    }
  ],
  "categories": ["navigation", "safety", "utilities"],
  "shortcuts": [
    {
      "name": "Emergency Alert",
      "short_name": "Emergency",
      "description": "Send emergency alert immediately",
      "url": "/?emergency=true",
      "icons": [
        {
          "src": "https://img.icons8.com/color/96/000000/security-shield-green.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Start Tracking",
      "short_name": "Track",
      "description": "Start live journey tracking",
      "url": "/?tracking=true",
      "icons": [
        {
          "src": "https://img.icons8.com/color/96/000000/gps-device.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Quick Contacts",
      "short_name": "Contacts",
      "description": "Manage emergency contacts",
      "url": "/?contacts=true",
      "icons": [
        {
          "src": "https://img.icons8.com/color/96/000000/contacts.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+saferoute",
      "url": "/?emergency=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "permissions": [
    "geolocation",
    "notifications",
    "background-sync",
    "periodic-background-sync"
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "related_applications": [],
  "prefer_related_applications": false
}
