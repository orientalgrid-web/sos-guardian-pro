      "label": "Mobile Interface"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Emergency Alert",
      "short_name": "Emergency",
      "description": "Activate emergency mode immediately",
      "url": "/?source=shortcut&action=emergency",
      "icons": [
        {
          "src": "https://img.icons8.com/color/96/000000/siren.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Start Journey Tracking",
      "short_name": "Track Journey",
      "description": "Begin tracking your current journey",
      "url": "/?source=shortcut&action=tracking",
      "icons": [
        {
          "src": "https://img.icons8.com/color/96/000000/route.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Add Emergency Contact",
      "short_name": "Add Contact",
      "description": "Add new emergency contact quickly",
      "url": "/?source=shortcut&action=add_contact",
      "icons": [
        {
          "src": "https://img.icons8.com/color/96/000000/add-user-male.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "categories": [
    "navigation",
    "productivity", 
    "security",
    "health",
    "travel"
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "auto"
  },
  
  "handle_links": "preferred",
  
  "protocol_handlers": [
    {
      "protocol": "web+saferoute",
      "url": "/?protocol=%s"
    }
  ],
  
  "related_applications": [],
  
  "prefer_related_applications": false,
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*", "audio/*"]
        }
      ]
    }
  },
  
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt", ".log"]
      },
      "icons": [
        {
          "src": "https://img.icons8.com/color/96/000000/document.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "display_override": [
    "standalone",
    "minimal-ui",
    "window-controls-overlay"
  ],
  
  "id": "/?source=pwa",
  
  "splash_pages": null
}
